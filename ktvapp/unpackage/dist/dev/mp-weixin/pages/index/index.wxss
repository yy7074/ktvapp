
.container.data-v-1cf27b2a {
	min-height: 100vh;
	background: linear-gradient(135deg, #434343 0%, #2C2C2E 100%);
	color: white;
	padding-bottom: 160rpx; /* 为自定义tabbar留出空间 */
}
.status-bar.data-v-1cf27b2a {
	width: 100%;
}
.header.data-v-1cf27b2a {
	display: flex;
	justify-content: space-between;
	align-items: center;
	padding: 40rpx 60rpx;
	margin-bottom: 40rpx;
}
.user-info.data-v-1cf27b2a {
	display: flex;
	align-items: center;
}
.avatar.data-v-1cf27b2a {
	width: 120rpx;
	height: 120rpx;
	border-radius: 60rpx;
	margin-right: 30rpx;
}
.user-details.data-v-1cf27b2a {
	flex: 1;
}
.username.data-v-1cf27b2a {
	display: block;
	font-size: 36rpx;
	font-weight: 500;
	margin-bottom: 10rpx;
}
.vip-info.data-v-1cf27b2a {
	display: flex;
	align-items: center;
}
.vip-icon.data-v-1cf27b2a {
	width: 40rpx;
	height: 20rpx;
	margin-right: 15rpx;
}
.vip-text.data-v-1cf27b2a {
	font-size: 28rpx;
	color: #FFD700;
}
.upgrade-btn.data-v-1cf27b2a {
	background: #7ED321;
	color: #2C2C2E;
	border: none;
	border-radius: 40rpx;
	padding: 20rpx 40rpx;
	font-size: 28rpx;
	font-weight: 500;
}

/* 主KTV卡片 */
.main-ktv-card.data-v-1cf27b2a {
	display: flex;
	flex-direction: column;
	align-items: center;
	padding: 80rpx 60rpx 60rpx;
	margin-bottom: 60rpx;
}
.ktv-icon-container.data-v-1cf27b2a {
	position: relative;
	width: 400rpx;
	height: 500rpx;
	background: linear-gradient(135deg, #7ED321 0%, #5CB85C 100%);
	border-radius: 60rpx 60rpx 40rpx 40rpx;
	display: flex;
	align-items: center;
	justify-content: center;
	margin-bottom: 40rpx;
	box-shadow: 0 20rpx 40rpx rgba(126, 211, 33, 0.3);
}
.ktv-logo.data-v-1cf27b2a {
	font-size: 120rpx;
	font-weight: bold;
	color: #2C2C2E;
}
.ktv-ribbon.data-v-1cf27b2a {
	position: absolute;
	top: 80rpx;
	right: 60rpx;
	background: #FFD700;
	color: #2C2C2E;
	font-size: 28rpx;
	font-weight: bold;
	padding: 8rpx 20rpx;
	border-radius: 20rpx;
	transform: rotate(15deg);
}
.ktv-title.data-v-1cf27b2a {
	font-size: 28rpx;
	color: #FFFFFF;
	text-align: center;
}

/* 预约按钮 */
.booking-btn.data-v-1cf27b2a {
	position: fixed;
	bottom: 280rpx;
	left: 60rpx;
	right: 60rpx;
	background: #7ED321;
	border-radius: 50rpx;
	padding: 40rpx;
	text-align: center;
	box-shadow: 0 10rpx 30rpx rgba(126, 211, 33, 0.4);
}
.booking-text.data-v-1cf27b2a {
	font-size: 36rpx;
	font-weight: 600;
	color: #2C2C2E;
}

/* 底部提示信息 */
.bottom-notice.data-v-1cf27b2a {
	position: fixed;
	bottom: 200rpx;
	left: 0;
	right: 0;
	text-align: center;
	padding: 20rpx;
}
.notice-text.data-v-1cf27b2a {
	font-size: 28rpx;
	color: #CCCCCC;
}
